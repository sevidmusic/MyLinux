#!/bin/bash

set_term_color() {
    local foreground="$1"
    local background="$2"

    # Set the foreground color
    if [[ "$foreground" -ge 0 && "$foreground" -le 255 ]]; then
        fg_color="\033[38;5;${foreground}m"
    else
        echo "Invalid foreground color code: $foreground"
        return 1
    fi

    # Set the background color
    if [[ "$background" -ge 0 && "$background" -le 255 ]]; then
        bg_color="\033[48;5;${background}m"
    else
        echo "Invalid background color code: $background"
        return 1
    fi

    # Print the color codes
    echo -e "${fg_color}${bg_color}"
    echo "${fg_color}${bg_color}"
    echo -e "\033[38;5;0m"
}

if [[ $# -lt 2 ]]; then
    echo "Usage: $0 <foreground color code> <background color code>"
    exit 1
fi

set_term_color "${1}" "${2}"
