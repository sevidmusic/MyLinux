    git diff origin/"${BRANCH}";
}

# PS1 #

mylinux_branch() {
  if [ -d "${HOME}/.MyLinux" ]; then
    branch=$("${HOME}/.darling/mylinux" rev-parse --abbrev-ref HEAD 2>/dev/null)
    if [ $? -eq 0 ]; then
      echo -e "\033[0m\033[34;92m ($branch) \033[0m"
    fi
  fi
}

mylinux_status() {
  if [ -d "${HOME}/.MyLinux" ]; then
    if "${HOME}/.darling/mylinux" rev-parse --git-dir >/dev/null 2>&1; then
      if [ -n "$("${HOME}/.darling/mylinux" status --porcelain)" ]; then
        echo -e "\033[1;33m ðŸ’€ ðŸ’¾ \033[0m"
      fi
    fi
  fi
}

git_branch() {
  if [ -d .git ]; then
    branch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
    if [ $? -eq 0 ]; then
      echo -e "\033[0m| \033[34;97m ($branch) \033[0m"
    fi
  fi
}

git_status() {
  if [ -d .git ]; then
    if git rev-parse --git-dir >/dev/null 2>&1; then
      if [ -n "$(git status --porcelain)" ]; then
        echo -e "\033[1;33m ðŸ’€ ðŸ’¾ \033[0m"
      fi
    fi
  fi
}

sizeOfHome() {
  du -sh ~/ | awk '{print $1;}'
}


