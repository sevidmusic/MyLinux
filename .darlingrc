#!/bin/bash

# Options
set -o vi

# Environment Vars
PATH="${PATH}:${HOME}/.darling"
PATH="${PATH}:${HOME}/.local/bin"

# PS#
PS1='\[\033[01;0m\]\[\033[01;105m\]\[\033[01;30m\] \u \[\033[01;102m\] \w \[\033[01;104m\]\[\033[01;32m\] $(date +%Y/%m/%d) $(date +%H:%M:%S) \[\033[01;0m\]\n\n\[\033[01;104m\] $ \[\033[01;0m\] '

# Vars
alias c='clear'
alias ls='exa'
alias more='less -R'
alias less='less -R'
alias q='exit'
alias r="history -c && reset"
alias tls='tmux ls'
alias tna='tmux attach -t'
alias tns='tmux new -s'
alias voa='xargs --delimiter "\\n" --arg-file="${HOME}/vimfilelist" nvim --'
alias gst='git status'
alias gdf='git diff'
alias gds='git diff --stat'
alias gpu='printf "\n\e[0m\e[105m\e[30mAre you sure that you want to push your changes to github? (y|n)\e[0m\n"; read c; [ "${c}" == "y" ] && git push -u'
alias sshDarlingDev='ssh darling@104.237.146.46'
alias gs='echo "gs disabled via an alias defined in ~/.darlingrc"'
alias cmx='cmatrix -su 7'
alias cat='bat'
alias cr='cargo check && cargo run'
alias mylinux='/usr/bin/git --git-dir="${HOME}/.MyLinux" --work-tree="${HOME}"'
alias rDev='printf "\n\e[0m\e[105m\e[30mAre you sure that you want to delete the ${HOME}/dev directory, which includes the current development version of roady? (y|n)\e[0m\n"; read c; [ "$c" == "y" ] && [ -d ${HOME}/dev ] && rm -Rf ${HOME}/dev'
alias uts='date +"%s"'
alias cc='wal -c && wal -q -i ${HOME}/Pictures/'
alias edrc='vim ${HOME}/.darlingrc'
alias sdrc='source ${HOME}/.darlingrc'
alias jfis='while :; do clear && jsonFilesInStorage && sleep 1; done'
alias cbcz='wal --backend=colorz -i "${HOME}/Pictures"'
alias cbct='wal --backend=colorthief -i "${HOME}/Pictures"'
alias cbwl='wal --backend=wal -i "${HOME}/Pictures"'
alias rbytes='head -c 5M /dev/urandom | sha1sum | sed "s/-//g" | sed "s/ //g"'

# Make sure colors match background image

[ -z "$TMUX" ] &&
    currentWallpaper=$(gsettings get org.gnome.desktop.background picture-uri-dark | sed "s/'//g") &&
    [ -f "$currentWallpaper" ] &&
    wal -c &&
    wal -q --backend=colorthief -i "$currentWallpaper"
